# LLM Requester Environment Variables
# Copy this file to .env and fill in the required values

# ===== REQUIRED SETTINGS =====
# Yandex Cloud API credentials
YC_API_KEY=your_yandex_cloud_api_key_here
YC_FOLDER_ID=your_yandex_cloud_folder_id_here

# ===== OPTIONAL SETTINGS =====
# Yandex Cloud base URL (OpenAI-compatible endpoint)
YC_BASE_URL=https://llm.api.cloud.yandex.net/v1

# Concurrency and timeout settings
MAX_CONCURRENT=10
HTTP_TIMEOUT=600

# Retry policy
MAX_RETRY_PROVIDER=2
MAX_RETRY_JSON=2

# Default model (short name or full URI segment)
DEFAULT_MODEL=qwen3-235b-a22b-fp8/latest

# Logging configuration
LOG_LEVEL=INFO
REQUEST_LOG=true
REQUEST_ID_HEADER=X-Request-ID
